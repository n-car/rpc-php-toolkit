{
    "name": "rpc-php-toolkit/rpc-php-toolkit",
    "description": "Enterprise-ready JSON-RPC 2.0 toolkit for PHP with simplified APIs, structured logging, middleware system, schema validation, batch processing, and comprehensive BigInt/Date serialization support",
    "type": "library",
    "keywords": [
        "json-rpc",
        "rpc",
        "server",
        "client",
        "middleware",
        "validation",
        "bigint",
        "enterprise",
        "php",
        "toolkit"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Nicola Carpanese",
            "email": "nicola.carpanese@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "RpcPhpToolkit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RpcPhpToolkit\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpcs": "phpcs src/ --standard=PSR12",
        "phpstan": "phpstan analyse src/ --level=8"
    },
    "config": {
        "sort-packages": true
    }
}
